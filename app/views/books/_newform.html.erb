<%= form_for(book) do |f| %>

	<div class="error">
	<% if book.errors.any? %>
		<h2><%= book.errors.count %>件のエラーが発生しました。</h2>
		<ul>
			<%= book.errors.full_messages.each do |message| %>
				<li><p>error</p><%= message %></li>
			<% end %>
		</ul>
	<% end %>
	</div>
	
	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<%= f.label :body %>
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>